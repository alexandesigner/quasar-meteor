{
  "name": "quasar-meteor",
  "version": "0.0.1",
  "description": "A Quasar + Meteor integration",
  "productName": "Quasar Meteor",
  "cordovaId": "org.cordova.quasar.app",
  "author": "Allan Alexandre <alexandesigner@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "quasar dev",
    "build": "quasar build",
    "build:pwa": "quasar build -m pwa",
    "generate:bundler": "NODE_TLS_REJECT_UNAUTHORIZED=0 meteor-client bundle --destination node_modules/meteor.bundle.js --config meteor.bundle.config.json",
    "api": "cd api/ && meteor npm install && NODE_TLS_REJECT_UNAUTHORIZED=0 meteor run -p 4000",
    "lint": "eslint --ext .js,.ts,.vue ./",
    "test": "echo \"No test specified\" && exit 0"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@quasar/extras": "^1.0.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "core-js": "^3.6.5",
    "quasar": "^2.0.0",
    "vue-i18n": "^9.0.0",
    "vuex": "^4.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@quasar/app": "^3.0.0",
    "@types/node": "^12.20.21",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^7.0.0",
    "meteor-client-bundler": "^0.6.0",
    "stylus": "^0.56.0",
    "stylus-loader": "^6.2.0"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 4 Edge versions",
    "last 7 Safari versions",
    "last 8 Android versions",
    "last 8 ChromeAndroid versions",
    "last 8 FirefoxAndroid versions",
    "last 10 iOS versions",
    "last 5 Opera versions"
  ],
  "engines": {
    "node": ">= 12.22.1",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
